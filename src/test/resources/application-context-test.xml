<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

       <context:annotation-config/>
       <context:component-scan base-package="com.morkva"/>

       <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
              <property name="maxActive" value="10"/>
              <property name="maxWait" value="10"/>
              <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
              <property name="url" value="jdbc:mysql://cakehost.mysql.ukraine.com.ua:3306/cakehost_goittst"/>
              <property name="username" value="cakehost_goittst"/>
              <property name="password" value="jqbueb72"/>
       </bean>

       <bean id="nullFixedJdbcTemplate" class="com.morkva.model.dao_v2.utils.FixedNullJdbcTemplate">
              <constructor-arg ref="dataSource"/>
       </bean>

       <bean id="categoryDAO" class="com.morkva.model.dao_v2.templates.CategoryJDBCTemplate">
              <property name="jdbcTemplate" ref="nullFixedJdbcTemplate"/>
       </bean>

       <bean id="quoteDAO" class="com.morkva.model.dao_v2.templates.QuoteJDBCTemplate">
              <property name="jdbcTemplate" ref="nullFixedJdbcTemplate"/>
       </bean>

       <bean id="projectDAO" class="com.morkva.model.dao_v2.templates.ProjectJDBCTemplate">
              <property name="jdbcTemplate" ref="nullFixedJdbcTemplate"/>
       </bean>

       <bean id="paymentOptionDao" class="com.morkva.model.dao_v2.templates.PaymentOptionJDBCTemplate">
              <property name="jdbcTemplate" ref="nullFixedJdbcTemplate"/>
       </bean>

       <bean id="categoryService" class="com.morkva.services.CategoryService"/>

       <bean id="quoteService" class="com.morkva.services.QuoteService"/>

       <bean id="projectService" class="com.morkva.services.ProjectService"/>
</beans>