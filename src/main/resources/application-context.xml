<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

       <context:annotation-config/>

       <bean id="daoFactory" class="com.morkva.model.dao.jdbc.mysql.MySQLDaoFactory" scope="singleton"/>

       <bean id="categoryDAO" class="com.morkva.model.dao.jdbc.mysql.MySQLCategoryDao">
              <constructor-arg ref="daoFactory"/>
       </bean>

       <bean id="quoteDAO" class="com.morkva.model.dao.jdbc.mysql.MySQLQuoteDAO">
              <constructor-arg ref="daoFactory"/>
       </bean>

       <bean id="projectDAO" class="com.morkva.model.dao.jdbc.mysql.MySQLProjectDao">
              <constructor-arg ref="daoFactory"/>
       </bean>

       <bean id="categoryRepository" class="com.morkva.model.CategoryRepositoryImpl">
              <constructor-arg ref="categoryDAO"/>
       </bean>

       <bean id="quoteRepository" class="com.morkva.model.QuoteRepositoryImpl">
              <constructor-arg ref="quoteDAO"/>
       </bean>

       <bean id="projectRepository" class="com.morkva.model.ProjectRepositoryImpl">
              <constructor-arg ref="projectDAO"/>
       </bean>

</beans>